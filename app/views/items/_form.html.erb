<%= form_for [user, user.items.new] do |f| %>
    <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new task", autofocus: true %>
    </div>
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %> 
    </div>
<% end %>