<div class="row">
  <div class="col-md-10">
    <h1>Shielded Depths<small> A task list that self-destructs</small></h1>
  </div>
  <div class="col-md-10">
    <%= render partial: 'items/form', locals: {user: @user} %>
  </div>
  <div class="col-md-10">
    <h3 class="bg-primary text-center">Tasks</h3>
      <%= render partial: 'items/item', locals: {completed: @completed_items, items: @items} %>
  </div>
  <div class="col-md-10">
    <h3 class="bg-info text-center">Completed Tasks</h3>
      <%= render partial: 'items/completed', locals: {completed: @completed_items, items: @items} %>
  </div>
</div>