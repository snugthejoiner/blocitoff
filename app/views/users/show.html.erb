<div class="row">
  <div class="col-md-10">
    <h1>Shielded Depths</h1>
    <h4>A task list that self-destructs.</h4>
  </div>
  <div class="col-md-10">
    <%= render partial: 'items/form', locals: {user: @user} %>
  </div>
  <div class="col-md-10">
    <h2 class="bg-primary text-center">Tasks</h2>
      <%= render partial: 'items/item', locals: {completed: @completed_items, items: @items} %>
  </div>
  <div class="col-md-10">
    <h2 class="bg-info text-center">Completed Tasks</h2>
      <%= render partial: 'items/completed', locals: {completed: @completed_items, items: @items} %>
  </div>
</div>